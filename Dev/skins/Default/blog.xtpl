<!-- BEGIN: Blog -->
<div id="main">
<!-- BEGIN: Post -->
 <div class="article">
  <h2 class="title"><img src="{icon}" style="float:left" alt="" /><a href="{post_link}" rel="bookmark">{subject}</a>{unpublished}</h2>

  <span class="postbit_top"></span>
  <div class="rounded_top" style="background-position:22px 0px;">
   <span class="one"></span>
   <span class="two"></span>
   <span class="three"></span>
   <span class="four"></span>
  </div>

  <div class="postbit">
<!-- BEGIN: Image -->
   <img class="float" src="{image}" alt="" />
<!-- END: Image -->
   {text}
   <p></p>
  </div>

  <div class="rounded_bottom">
   <span class="one">&nbsp;</span>
   <span class="two">&nbsp;</span>
   <span class="three">&nbsp;</span>
   <span class="four">&nbsp;</span>
  </div>
 </div>

 <div class="article">
  {delicious}
  {stumbleupon}
  {reddit}
  {gplus}
  {facebook}
  {twitter}
  Posted on {date} by {post_author} in: {cat_text} | <a href="{post_link}#comments">{count} comment(s)</a> {closed}
  {mod_controls}
 </div>
<!-- END: Post -->
</div>
{sidebar}
<!-- END: Blog -->